<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticketItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:layout_marginBottom="10dp"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="3">


        <LinearLayout
            android:weightSum="6"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleTicketText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#3f2b96"
                android:padding="5dp"
                android:text="Game Night (SpeelFilm) testtesttest" />

            <TextView
                android:id="@+id/ticketID"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:textSize="35dp"
                android:textStyle="bold"
                android:background="#3f2b96"
                android:textColor="#ffff"
                android:padding="5dp"
                android:text="20" />

            <TextView
                android:id="@+id/dateTicketText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#2e2e2e"
                android:padding="5dp"
                android:text="Director: Frank Frank" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#2e2e2e"
                android:padding="5dp"
                android:background="#3f2b96"

                />



        </LinearLayout>

    </LinearLayout>
</RelativeLayout>