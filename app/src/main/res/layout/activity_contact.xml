<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="8"
    tools:context="com.example.daredevil07.ItsShowTime.ContactActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#3f2b96">


            <Button
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/image"/>

            <Button
                android:id="@+id/ticketButton"
                android:layout_width="102dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#8b0000"
                android:text="Tickets"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/contact"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:background="#013220"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="Contact"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:srcCompat="@drawable/amrita"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="250dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/RouteId"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/AdresId"
                    android:layout_width="200dp"
                    android:layout_marginTop="370dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/ContactId"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="450dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/OpeningsId"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="550dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_marginBottom="30dp"/>

            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
