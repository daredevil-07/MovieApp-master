<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daredevil07.ItsShowTime.ReservationActivity">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/gradient_background"
            android:layout_width="match_parent"
            android:weightSum="8"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:background="#3f2b96"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginBottom="10dp"
                android:weightSum="1">



                <Button
                    android:id="@+id/home"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/image"/>

                <Button
                    android:id="@+id/ticketButton"
                    android:layout_width="102dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="#8b0000"
                    android:text="Tickets"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/contact"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="true"
                    android:background="#013220"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Contact"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.6"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/backdropImg"
                    android:layout_width="match_parent"
                    android:layout_height="146dp"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/TableSeats"
                android:orientation="vertical"
                android:background="#ffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:weightSum="3"
                android:layout_weight="3.5">

                <TextView
                    android:id="@+id/titleFilmReservation"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="Title"
                    android:textAlignment="center"
                    android:textColor="#3f2b96"
                    android:textSize="30dp"

                    />

                <Button
                    android:id="@+id/showDate0"
                    android:text="Show date and time"
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:background="#ffa500"
                    android:textSize="20dp"
                    android:layout_margin="0dp"
                    android:layout_height="0dp"
                />

                <Button
                    android:id="@+id/showDate1"
                    android:text="Show date and time"
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:background="#ffa500"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="0dp"
                    />
                <Button
                    android:id="@+id/showDate2"
                    android:text="Show date and time"
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:background="#ffa500"
                    android:textSize="20dp"
                    android:layout_height="0dp"
                    />

            </LinearLayout>


        </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />





    </android.support.constraint.ConstraintLayout>

